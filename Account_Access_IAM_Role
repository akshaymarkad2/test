{
  "name": "Create_Account_Access_IAM_Role",
  "tasks": [
    {
      "name": "Create IAM role for account access",
        "name": "CrossAccountMonitoringRole",
        "assume_role_policy": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "AWS": "arn:aws:iam::${master_account_id}:root"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "managed_policies": [
          "arn:aws:iam::aws:policy/AmazonSSMFullAccess",
          "arn:aws:iam::aws:policy/CloudWatchFullAccess"
        ]
      }
    }
  ]
}
